<h1>Ma Liste de Tâches</h1>

<%= link_to "+ Ajouter une tâche", "/tasks/new" %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, "/tasks/#{task.id}" %>

      | <%= link_to "Supprimer", "/tasks/#{task.id}",
            data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
    </li>
  <% end %>
</ul>
